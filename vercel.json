{
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/sitemedhome",
      "destination": "/api/sitemedhome"
    },
    {
      "source": "/sitemedhome/(.*)",
      "destination": "/api/sitemedhome?path=$1"
    },
    {
      "source": "/site/:subdomain",
      "destination": "/api/site?subdomain=:subdomain"
    },
    {
      "source": "/site/:subdomain/:path*",
      "destination": "/api/site?subdomain=:subdomain&path=:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
